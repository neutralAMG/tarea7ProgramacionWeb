
<h1 class="display-1 text-center ">POKEMON MANTAINANCE</h1>
<a href="/pokemon/pokemon-add" class="btn btn-success mb-3">New Pokemon</a>

{{#if IsEmpty}}
    <h1 class="text-center">There is no pokemons</h1>
{{else}}
    <div class="row">
        {{#each pokemons}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                        <img src="{{ImgUrl}}" alt="{{Name}}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title text-center text-primary">{{this.Name}}</h5>
                     <div class="d-flex justify-content-between">
                        <p class="card-text text-muted"><strong>Region:</strong> {{this.region.dataValues.Name}}</p>
                        <p class="card-text  text-muted"><strong>Type:</strong> {{this.type.dataValues.Name}}</p> 
                      </div>
                    </div>
                    <div class="card-footer text-center">
                        <form action="/pokemon/pokemon-delete" style="display: inline;" method="POST" onsubmit="return confirm('You sure you want to delete the series?');">
                            <input type="hidden" name="id" value="{{this.id}}"/>
                            <button type="submit" class="btn btn-danger me-2">Delete</button>
                        </form>
                        <a href="/pokemon/pokemon-edit/{{this.id}}" class="btn btn-info">Edit</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}