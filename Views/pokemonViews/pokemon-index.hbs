     <div class="mb-3">
        <label for="region" class="form-label">Region:</label>
        <select id="region" class="from-select"  name="region" class="from-select" >
            <option value="">Choose a region to filter</option> 
            {{#each regions}}
                <option value="{{this.id}}">{{this.Name}}</option>
