  <form action="/pokemon/pokemon-filterName" method="POST">
  <label for="name">Name:</label>
  <input type="text" id="name" name="name" class="from-control" >
     <button class="btn btn-outline-info" type="submit">filter</button>
  </form>


  <form action="/pokemon/pokemon-filter" method="POST">
