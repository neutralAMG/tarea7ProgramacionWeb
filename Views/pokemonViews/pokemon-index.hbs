<div class="card-footer">
  <a class="btn btn-outline-info" href="/pokemon/pokemon-index">Unfilter</a>
</div>
</div>




<div class="col-8">
  
{{#if IsEmpty}}
    <h1 class="text-center">There is no pokemons</h1>
{{else}}
    <div class="row">
        {{#each pokemons}}
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="{{this.ImgUrl}}" alt="{{name}}" class="card-img-top">
               
                    <div class="card-body">
                        <h5 class="card-title text-center text-primary">{{this.Name}}</h5>
                        <div class="d-flex justify-content-between">
                            <p class="card-text text-muted"><strong>Region:</strong> {{this.region.dataValues.Name}}</p>
                             <p class="card-text text-muted"><strong>Type:</strong> {{this.type.dataValues.Name}}</p>
                        </div> 
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}
</div>
</div>